% Vamos a dibujar en plano un tubo horizontal

function tubohorizontaL(pos_ini, d)
  h=1;
  hold on;
pos_ini(1)
pos_ini(2)
circle(pos_ini(1),pos_ini(2),1);hold on;
circle(pos_ini(1)+d,pos_ini(2),1);
plot([pos_ini(1) pos_ini(1)+d],[pos_ini(2)-h  pos_ini(2)-h])
plot([pos_ini(1) pos_ini(1)+d],[pos_ini(2)+h  pos_ini(2)+h])
axis tight;
endfunction
  




